<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Kuhle Study Group</title>
    <link rel="stylesheet" href="~/css/NewStyle.css" />  <!-- Reference your custom CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>

    <!-- 🏠 NAVIGATION MENU -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="~/Home/Index">Kuhle Study Group</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/KuhleStudyGroup/ListPeople">Study Group</a>
                    </li>

                    <!-- Dropdown for Personal Pages -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Study Members
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="~/HTML/Jane.html">Jane</a></li>
                            <li><a class="dropdown-item" href="~/HTML/John.html">John</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Moses.html">Moses</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Mary.html">Mary</a></li>
                            <li><a class="dropdown-item" href="~/HTML/YourName.html">Me</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p>&copy; @DateTime.Now.Year Kuhle Study Group | All Rights Reserved</p>
    </footer>

    <!-- Bootstrap JavaScript (for dropdown & responsiveness) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
